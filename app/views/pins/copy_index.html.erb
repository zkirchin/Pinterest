<h1>Listing All Pins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Board</th>
      <th>Full Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.name %></td>
        <td><%= image_tag(pin.image_url, :width => 100)%></td>
        <td><%= pin.board.name rescue "N/A" %></td>
        <td><%= pin.user.full_name rescue "N/A" %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

